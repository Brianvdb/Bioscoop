@model IEnumerable<DomainModel.Models.Gast>

@{
    ViewBag.Title = "Index";
}

<h2>Gasten</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Voornaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Achternaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reservering.Film.Naam)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Voornaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TussenVoegsel) @Html.DisplayFor(modelItem => item.Achternaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reservering.Film.Naam)
        </td>
        <td>
            @Html.ActionLink("Wijzigen", "Edit", new { id=item.GastId }, new { @class = "btn btn-warning" })
        </td>
    </tr>
}
</table>